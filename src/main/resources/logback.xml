<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<appender name="FILE" class="ch.qos.logback.core.FileAppender">
		<file>/Users/dave/weather-queue.log</file>
		<append>true</append>
		<encoder>
			<pattern>%-4r %-5level %logger{35}: %msg%n</pattern>
		</encoder>
	</appender>
	<root level="DEBUG">
		<appender-ref ref="FILE" />
	</root>
	
</configuration>